[colors]
;background = #1a1e23
;background = #aa2F343F
;background-alt = #373B41
;foreground = #d2d4d3
;primary = #009999
;secondary = #009999
;alert = #A54242
disabled = #707880

;background = ${xrdb:color1:#50000000}
background = #aa2F343F
background-alt = ${xrdb:color2:#444}
foreground = ${xrdb:color7:#dfdfdf}
;foreground-alt = ${xrdb:color6:#555}
primary = #ffb52a
secondary1 = #000000
secondary = #cc0000
alert = #bd2c40

[bar/example]
width = 100%
height = 20pt
radius = 0
bottom = true

; dpi = 96
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2pt
border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 1
module-margin = 1
separator = |
separator-foreground = ${colors.disabled}

font-0 = "JetBrainsMono Nerd Font:size=11;2"

modules-left = xworkspaces xwindow
modules-right = ram_usage load_avg cpu temperature disk wired lan_ip wlan date pulseaudio battery xkeyboard dunst tray 

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

tray-position = right
#tray-offset-x = 0
tray-detached = false

; wm-restack = generic
wm-restack = bspwm
; wm-restack = i3

; override-redirect = true


[module/sep]
type = custom/text
content = "|"
content-foreground = ${colors.disabled}
content-background = ${colors.background}

[module/dunst]
type = custom/ipc
initial = 1
format-foreground = ${colors.yellow}
hook-0 = echo "%{A1:dunstctl set-paused true && polybar-msg hook dunst 2:}%{A}" &
hook-1 = echo "%{A1:dunstctl set-paused false && polybar-msg hook dunst 1:}%{A}" &

[module/xworkspaces]
type = internal/xworkspaces
label-active = %name%
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.primary}
label-active-padding = 1
label-occupied = %name%
label-occupied-padding = 1
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1


[module/load_avg]
type = custom/script
;format-prefix = "  "
exec = cut -d " " -f 1-3 /proc/loadavg 
click-left = alacritty -e btop
click-right = alacritty -e btop
interval = 5


[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%


[module/pulseaudio]
type = internal/pulseaudio
interval = 5
format-volume = <ramp-volume> <label-volume>
format-volume-background = ${colors.background}
format-volume-padding = 0
format-volume-foreground = ${colors.foreground} 
format-muted = <label-muted>
format-muted-prefix = "婢 "
format-muted-background = ${colors.background}
format-muted-padding = 0
format-muted-prefix-foreground = ${colors.foreground}
label-muted-foreground = ${colors.foreground} 
ramp-volume-0 = 奔 
ramp-volume-1 = 奔
ramp-volume-2 = 墳
click-right = pavucontrol &
click-middle = simplescreenrecorder &

[module/nepcal]
type = custom/script
exec = echo $(nepcal date)
interval = 60

[module/ram_usage]
type = custom/script
exec = free -h | awk '/^Mem:/ {print $3}' | cut -f 1 -d'i'                                     
;format-prefix = "RAM "
;format-prefix-foreground = ${colors.primary}
interval = 5

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/disk]
type = custom/script
exec = df -Th /dev/sda1 | awk 'NR>=2 && NR<=2 {print $5}'                                      
interval = 60
separator = false

[module/lan_ip]
type = custom/script
#format-prefix = " " 
exec = ip -br addr show enp2s0 | awk '{print $3}' | cut -f 1 -d '/'
interval = 3
click-right = alacritty -e mtr google.com
click-left = alacritty -e watch curl ifconfig.io

[module/date]
type = custom/script
#format-prefix = " " 
click-left = alacritty -e watch nepcal
exec = date '+%a %d %b %I:%M:%S'
interval = 5

[module/cpu]
type = internal/cpu
interval = 5
#format-prefix = "CPU "
label = %percentage:2%%
#format-prefix-foreground = ${colors.primary}

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{F#009999}%ifname%%{F#707880} disconnected



[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
poll-interval = 2
time-format = %H:%M
;format-charging-prefix = "BAT "
format-charging-prefix-background = ${colors.background}
format-charging-prefix-foreground = ${colors.primary}
format-charging-background = ${colors.background}
format-charging-foreground = ${colors.foreground}
format-charging-padding = 0
format-discharging = <label-discharging>
format-discharging-background = ${colors.background}
format-discharging-foreground = ${colors.foreground}
format-discharging-padding = 0
format-discharging-prefix = "BAT "
format-discharging-prefix-background = ${colors.background}
format-discharging-prefix-foreground = ${colors.primary}
format-full = <label-full>
;format-full-prefix = "   "
format-full-background = ${colors.background}
format-full-foreground = ${colors.foreground}
format-full-padding = 0
label-charging = "%percentage%%"
label-discharging = "%percentage%%"
label-full = " "

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70
format = <ramp> <label>
format-warn = <ramp> <label-warn>
label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary1}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}


[module/wired]
type = internal/network
interface = enp2s0
interval = 1.0
format-connected = <label-connected>
label-connected = %{T9}%{T-} %{T2}%downspeed%%{T-}
label-connected-foreground = ${colors.fg}
label-connected-padding = 1
format-disconnected = <label-disconnected>
label-disconnected = %{T9}%{T-}
label-disconnected-foreground = ${colors.shade-1}
label-disconnected-padding = 1



[module/wlan]
type = internal/network
interface = wlp3s0
interval = 1.0
format-connected =" "
format-connected-padding = 1
label-connected = %{T9}%{T-} %{T2}%downspeed%%{T-}
label-connected-foreground = ${colors.fg}
label-connected-padding = 1
format-disconnected = "睊"
format-disconnected-padding = 1
label-disconnected = %{T9}%{T-}
label-disconnected-foreground = ${colors.shade-1}
label-disconnected-padding = 1


[module/xkeyboard]
type = internal/xkeyboard
;blacklist-0 = num lock
format-prefix = "󰌌"
format-prefix-foreground = ${colors.foreground-alt}
label-layout = %layout%
label-indicator-padding = 1
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
